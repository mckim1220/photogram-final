<h1>Sign in</h1>

<%= form_with model:@user,url: login_user_path do |form| %>
    <div><%= form.label :email%>
    <%= form.text_field :email, placeholder:"Enter your email..." %></div>
    <div><%= form.label :password%>
    <%= form.password_field :password, placeholder:"Enter your  password..."%></div>

    <%= form.submit "Sign in"%>
<% end %>

<hr />
<p>Or, <%= link_to "Sign up", new_users_path %> instead.</p>